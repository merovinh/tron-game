@-webkit-keyframes "striper"
  0%
    top -180px
  100%
    top 0px

body
  background-color black
#container
  width 1024px
  height 768px
  border 1px solid #00303E
  overflow hidden
  background url("../images/city.jpg") 0px -191px / 100% 100% no-repeat
#gridContainer
  perspective 312px
.gridPlace
  transform rotateX(86deg)
  transform-style preserve-3d
  margin 0 auto
  margin-top -200px
  width 672px
.grid
  animation striper 3500ms infinite linear
  top -30px
  position relative
  transform translate3d(0,0,0)
  transform-style preserve-3d
  background-color #000
.row
  height 30px
.col
  height 30px
  width 30px
  display inline-block
  border 1px solid #69E3FF
  box-shadow inset 0px 0px 10px 1px rgba(0,184,217,1)
  background-color rgba(1,94,105,0.4)

/*bike*/
#bike
  width 300px
  height 200px
  perspective 660px
  position absolute
  top 352px
  z-index 1
  left 370px
  #box
    width 100%
    height 100%
    position absolute
    transform-style preserve-3d
    transition transform 1s
    figure
      display block
      position absolute
      border 2px solid black
      line-height 196px
      font-size 90px
      text-align center
      font-weight bold
      color white

    &.panels-backface-invisible figure
      backface-visibility hidden
    .front
    .back
      width 296px
      height 196px
    .right
    .left
      width 96px
      height 196px
      left 100px
    .top
    .bottom
      width 296px
      height 96px
      top 50px
      line-height 96px

    .front
      transform translateZ( 50px )
      background hsla( 000, 100%, 50%, 0.7 )
    .back
      transform rotateX( -180deg ) translateZ(  50px )
      background hsla( 160, 100%, 50%, 0.7 )
    .right
      transform rotateY(   90deg ) translateZ( 150px )
      background hsla( 120, 100%, 50%, 0.7 )
    .left
      transform rotateY(  -90deg ) translateZ( 150px )
      background hsla( 180, 100%, 50%, 0.7 )
    .top
      transform rotateX(   90deg ) translateZ( 100px )
      background hsla( 240, 100%, 50%, 0.7 )
    .bottom
      transform rotateX(  -90deg ) translateZ( 100px )
      background hsla( 300, 100%, 50%, 0.7 )

    &.show-front
      transform translateZ( -150px ) rotate3d(-1,15,-1, 90deg)
    &.show-left
      transform translateZ( -150px ) rotate3d(-2,15,0, 86deg)
/*bike end*/